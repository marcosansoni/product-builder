{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off",
        "react/forbid-prop-types": "off",
        "linebreak-style": "off"
    },
    "overrides": [
        {
            "files": ["*.stories.js"],
            "rules": {
                "react/jsx-props-no-spreading": "off"
            }
        },
        {
            "files": ["*.spec.js"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
